<% flash.each do |flash_type, message| %>
  <div clas="mx-auto sm:w-3/4 md:w-2/4 fixed inset-x-0 top-1">
    <% if flash_type == "alert" %>
      <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:text-red-400 text-center" role="alert">
        <span class="font-medium"><%= message %></span>
      </div>
    <% else %>
      <div class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50 dark:text-blue-400 text-center" role="alert">
        <span class="font-medium"><%= message %></span>
      </div>
    <% end %>
  </div>
<% end %>
